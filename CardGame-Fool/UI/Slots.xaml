<UserControl x:Class="CardGameFool.UI.Slots"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Width="580"
             Height="149">
    <UserControl.Resources>
        <Style x:Key="Slot" TargetType="Rectangle">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="110"/>
            <Setter Property="Stroke" Value="#FF6521FF"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="RadiusX" Value="5"/>
            <Setter Property="RadiusY" Value="5"/>
        </Style>
    </UserControl.Resources>

    <Canvas x:Name="Workspace">
        <Rectangle Style="{StaticResource Slot}"/>
        <Rectangle Style="{StaticResource Slot}" Canvas.Left="100"/>
        <Rectangle Style="{StaticResource Slot}" Canvas.Left="200"/>
        <Rectangle Style="{StaticResource Slot}" Canvas.Left="300"/>
        <Rectangle Style="{StaticResource Slot}" Canvas.Left="400"/>
        <Rectangle Style="{StaticResource Slot}" Canvas.Left="500"/>
    </Canvas>
</UserControl>
