<Window x:Class="CardGameFool.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardGameFool.UI"
        mc:Ignorable="d"
        Title="Card game - Fool"
        SizeToContent="WidthAndHeight"
        Background="#FF080A25"
        ResizeMode="CanMinimize">
    <Grid x:Name="Workspace"
          Width="850"
          Height="500">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <RotateTransform Angle="-45" CenterX="0.5" CenterY="0.5"/>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FF10133A"/>
                <GradientStop Color="#FF1766A2" Offset="0.45"/>
                <GradientStop Color="#FF10133A" Offset="1"/>
                <GradientStop Color="#FF1766A2" Offset="0.55"/>
            </LinearGradientBrush>
        </Grid.Background>

        <local:CardUI Side="Shirt"/>
    </Grid>
</Window>